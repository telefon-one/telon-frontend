<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- SIP Username -->
    <TextView
        android:id="@+id/label_sip_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIP Username"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sip_username"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Enter SIP username"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/label_sip_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <!-- SIP Password -->
    <TextView
        android:id="@+id/label_sip_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIP Password"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/sip_username"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/sip_password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Enter SIP password"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/label_sip_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SIP Server -->
    <TextView
        android:id="@+id/label_sip_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIP Server"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/sip_password"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/sip_server"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Enter SIP server address"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/label_sip_server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_settings_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:backgroundTint="@android:color/black"
        android:text="Save Settings"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/sip_server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="305dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
